@model IEnumerable<Civionics.Models.Project>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Projects</h2>

@if (User.Identity.Name == "admin")
{
    @Html.ActionLink("New Project", "Create", null, new { @class = "btn btn-default" })
}
<br />
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateAdded)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "../Sensor/List", new { id = item.ID })
            </td>
            <td>
                @if (item.Status == Civionics.Models.ProjectStatus.Alert)
                {
                    <img src="../Image/Get/red-orb" width="20" height="20" />
                }
                else if (item.Status == Civionics.Models.ProjectStatus.Warning)
                {
                    <img src="../Image/Get/yellow-orb" width="20" height="20" />
                }
                else
                {
                    <img src="../Image/Get/green-orb" width="20" height="20" />
                }
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @if (User.Identity.Name == "admin")
                {
                    @Html.ActionLink("Edit Permissions", "Edit", new { id = item.ID }, new { @class = "btn btn-default" })
                }

                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-default" })

                @if (User.Identity.Name == "admin")
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-default" })
                }
            </td>
        </tr>
    }

</table>

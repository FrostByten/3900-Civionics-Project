@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Project", routeValues: null, htmlAttributes: new { title = "goHome" })
        </li>
        @if (User.Identity.Name == "admin")
        {
            <li>@Html.ActionLink("New Project", "Create", "Project", routeValues: null, htmlAttributes: new { id = "adminProjLink" })</li>
            <li>@Html.ActionLink("New User", "Register", "Account", routeValues: null, htmlAttributes: new { id = "adminRegLink" })</li>
        }
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
